{
  "name": "Pencil",
  "devDependencies": {
    "electron-builder": "^3.10.0",
    "electron-prebuilt": "^0.37.5",
    "electron-rebuild": "^1.0.2",
    "rimraf": "^2.5.2"
  },
  "build": {
    "app-bundle-id": "vn.evolus.pencil",
    "app-category-type": "public.app-category.graphics-design",
    "iconUrl": "https://raw.githubusercontent.com/mbrainiac/pencil/master/build/icon.ico",
    "productName": "Pencil",
    "osx": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "target": "zip"
    },
    "linux": {
      "description": "An open-source GUI prototyping tool that's available for ALL platforms.",
      "maintainer": "Nguyen Tien Dzung <ngtdungnt@gmail.com>",
      "vendor": "Evolus"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "install-app-deps": "node ./node_modules/electron-builder/out/install-app-deps.js",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "start": "./node_modules/.bin/electron ./app",
    "clean": "rimraf dist",
    "clean:osx": "rimraf dist/Pencil-darwin*",
    "clean:win": "rimraf dist/Pencil-win*",
    "clean:linux": "rimraf dist/Pencil-linux*",
    "pack": "build",
    "dist": "build",
    "release": "build",
    "dist:linux": "./node_modules/.bin/build --platform linux --arch x64",
    "dist:win32": "./node_modules/.bin/build --platform win32 --arch all",
    "dist:darwin": "./node_modules/.bin/build --platform darwin",
    "pack:win32": "./node_modules/.bin/build --platform win32 --arch all"
  },
  "private": true
}
